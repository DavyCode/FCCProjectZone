<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container text-center">
             <h1>Welcome To Hospitals.ng</h1>
             <p>Add your hospital, clinic and laboratories on Hospitals.ng</p>
             <p>
                <a class="btn btn-primary btn-large" href="/hospitals/new">Add New Hospital</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% hospitals.forEach(function(hospital){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= hospital.image %>">
                   <div class="caption">
                       <h4><%= hospital.name %></h4>
                   </div>
                   <p>
                       <a href="/hospitals/<%= hospital._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
